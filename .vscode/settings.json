    "editor.cursorSurroundingLines": 8,
    "vim.leader": "<space>",
    "vim.foldfix": true,
    "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?", //skip inline styling
  
